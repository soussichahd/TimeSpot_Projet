@page
@model MyAmazonstore3.Pages.ChatModel
@{
    ViewData["Title"] = "Assistant Chat";
}
<style>
    body {
        background: #16213e;
        min-height: 100vh;
        font-family: Georgia, 'Times New Roman', serif;
    }

    .chat-container {
        max-width: 1400px;
        margin: 30px auto;
        background: linear-gradient(145deg, #2d590a 50%, #2d570a 50%);
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.5);
        overflow: hidden;
        display: flex;
        flex-direction: column;
        border: 1px solid rgb(45, 89, 10);
    }

    .chat-header {
        background: linear-gradient(135deg, rgb(45, 89, 10) 90%, rgb(63, 89, 41) 10%);
        color: white ;
        padding: 25px 30px;
        text-align: center;
        font-weight: 700;
        font-size: 1.5em;
        letter-spacing: 2px;
        text-transform: uppercase;
        box-shadow: 0 4px 15px rgba(197,157,95,0.3);
        position: relative;
    }

        .chat-header::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 2px;
            background: #1a1a2e;
        }

    .subtitle {
        font-family: Arial, sans-serif;
        font-size: 0.4em;
        font-weight: 300;
        letter-spacing: 3px;
        margin-top: 5px;
        opacity: 0.8;
    }

    .chat-messages {
        height: 500px;
        overflow-y: auto;
        padding: 30px;
        background: #0a0e17;
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

        .chat-messages::-webkit-scrollbar {
            width: 8px;
        }

        .chat-messages::-webkit-scrollbar-track {
            background: rgba(255,255,255,0.05);
            border-radius: 10px;
        }

        .chat-messages::-webkit-scrollbar-thumb {
            background: linear-gradient(135deg, #c59d5f 0%, #8b7355 100%);
            border-radius: 10px;
        }

    .message {
        max-width: 75%;
        padding: 16px 22px;
        border-radius: 16px;
        font-size: 0.95em;
        line-height: 1.6;
        position: relative;
        opacity: 0;
        transform: translateY(10px);
        transition: opacity 0.3s ease-out, transform 0.3s ease-out;
        /* CORRECTION IMPORTANTE : Préserver les retours à la ligne */
        white-space: pre-wrap;
        word-wrap: break-word;
    }

        .message.show {
            opacity: 1;
            transform: translateY(0);
        }

    .user-message {
        align-self: flex-end;
        background: linear-gradient(135deg, #c59d5f 0%, #a67c52 100%);
        color: #1a1a2e;
        border-bottom-right-radius: 4px;
        box-shadow: 0 4px 15px rgba(197,157,95,0.3);
        font-weight: 500;
    }

    .bot-message {
        align-self: flex-start;
        background: linear-gradient(145deg, #1a1f2e 0%, #252b3d 100%);
        color: #e8e8e8;
        border-bottom-left-radius: 4px;
        border: 1px solid rgb(55, 99, 10);
        box-shadow: 0 4px 15px rgba(0,0,0,0.3);
    }

        .bot-message strong {
            color: #c59d5f;
            font-size: 1.05em;
            display: block;
            margin-bottom: 8px;
            letter-spacing: 1px;
        }

    /* Style pour le contenu du bot */
    .bot-content {
        white-space: pre-wrap;
        word-wrap: break-word;
    }

    .chat-footer {
        padding: 25px 30px;
        background: linear-gradient(145deg, #0f1419 0%, #1a1f2e 100%);
        border-top: 1px solid rgba(197,157,95,0.2);
    }

    .input-group {
        display: flex;
        gap: 15px;
        align-items: center;
    }

    .chat-input {
        flex-grow: 1;
        border: 2px solid rgba(197,157,95,0.3);
        border-radius: 25px;
        padding: 14px 22px;
        outline: none;
        transition: all 0.3s ease;
        background: rgba(255,255,255,0.05);
        color: #e8e8e8;
        font-size: 0.95em;
    }

        .chat-input::placeholder {
            color: rgba(232,232,232,0.5);
            font-weight: 300;
        }

        .chat-input:focus {
            border-color: #c59d5f;
            background: rgba(255,255,255,0.08);
            box-shadow: 0 0 20px rgba(197,157,95,0.2);
        }

    .send-btn {
        background: linear-gradient(135deg, #c59d5f 0%, #8b7355 100%);
        color: #1a1a2e;
        border: none;
        border-radius: 50%;
        width: 50px;
        height: 50px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(197,157,95,0.3);
    }

        .send-btn:hover {
            transform: scale(1.08);
            box-shadow: 0 6px 25px rgba(197,157,95,0.5);
        }

        .send-btn:active {
            transform: scale(0.95);
        }

    .loading-dots {
        display: inline-flex;
        gap: 4px;
        margin-left: 5px;
    }

        .loading-dots span {
            width: 6px;
            height: 6px;
            background: #c59d5f;
            border-radius: 50%;
            opacity: 0.5;
        }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: rgba(232,232,232,0.5);
        font-size: 1.1em;
    }

    .empty-state-icon {
        font-size: 3em;
        margin-bottom: 15px;
        color: #c59d5f;
        opacity: 0.6;
    }
</style>

@await Component.InvokeAsync("Header")

<div class="chat-container">
    <div class="chat-header">
        Assistant TimeSpot
        <div class="subtitle">Concierge Virtuel</div>
    </div>

    <div class="chat-messages" id="chatWindow">
        @if (string.IsNullOrEmpty(Model.UserMessage) && string.IsNullOrEmpty(Model.BotResponse))
        {
            <div class="empty-state">
                <div class="empty-state-icon">⌚</div>
                <p>Bienvenue dans votre espace de discussion privé</p>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.UserMessage))
        {
            <div class="message user-message">@Model.UserMessage</div>
        }

        @if (!string.IsNullOrEmpty(Model.BotResponse))
        {
            <div class="message bot-message">
                <strong>Assistant</strong>
                <div class="bot-content">@Model.BotResponse</div>
            </div>
        }
        else if (!string.IsNullOrEmpty(Model.UserMessage))
        {
            <div class="message bot-message">
                <strong>Assistant</strong>
                <em>Préparation de votre réponse</em>
                <span class="loading-dots">
                    <span></span>
                    <span></span>
                    <span></span>
                </span>
            </div>
        }
    </div>

    <div class="chat-footer">
        <form method="post" class="input-group">
            <input type="text" name="UserMessage" class="chat-input"
                   placeholder="Posez votre question..." required autocomplete="off" />
            <button type="submit" class="send-btn" aria-label="Envoyer">
                <svg viewBox="0 0 24 24" width="22" height="22" fill="currentColor">
                    <path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"></path>
                </svg>
            </button>
        </form>
    </div>
</div>

<script>
    // Défilement automatique vers le bas
    var chatWindow = document.getElementById('chatWindow');
    chatWindow.scrollTop = chatWindow.scrollHeight;//on force le scroll en bas

    // Animation des messages au chargement
    setTimeout(function() {
        var messages = document.querySelectorAll('.message');
        messages.forEach(function(msg) {
            msg.classList.add('show');
        });
    }, 100);//apres 100 secondes on faire une annimation

    // Effet au focus de l'input
    var chatInput = document.querySelector('.chat-input');
    chatInput.addEventListener('focus', function() {
        this.style.transform = 'translateY(-2px)';
    });//style de focus 

    chatInput.addEventListener('blur', function() {
        this.style.transform = 'translateY(0)';
    });//style de blur

    // Animation des points de chargement
    var loadingDots = document.querySelectorAll('.loading-dots span');
    if (loadingDots.length > 0) {
        var dotIndex = 0;
        setInterval(function() {
            loadingDots.forEach(function(dot) {
                dot.style.opacity = '0.5';
            });
            loadingDots[dotIndex].style.opacity = '1';
            dotIndex = (dotIndex + 1) % loadingDots.length;
        }, 400);
    }
</script>