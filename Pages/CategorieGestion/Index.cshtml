@page
@model MyAmazonstore3.Pages.CategorieGestion.IndexModel

@{
    ViewData["Title"] = "Index";
}

@await Component.InvokeAsync("Header")

<div class="container-fluid py-4">
    <!-- En-tête -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-1">📁 Gestion des Catégories</h1>
            <p class="text-muted">Organisez vos produits par catégories</p>
        </div>
        <a asp-page="Create" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle"></i> Créer une nouvelle catégorie
        </a>
    </div>

    <!-- Statistiques -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card stats-card">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Total Catégories</h6>
                    <h3 class="mb-0">@Model.Categorie.Count</h3>
                </div>
            </div>
        </div>
       
        
        </div>
    </div>

    <!-- Tableau des catégories -->
    <div class="card table-card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table2">
                    <thead>
                        <tr>
                            <th style="width: 60px;">
                                <i class="bi bi-hash"></i>
                            </th>
                            <th>
                                <i class="bi bi-tag-fill me-2"></i>
                                @Html.DisplayNameFor(model => model.Categorie[0].Nom)
                            </th>
                           
                            <th class="text-center" style="width: 200px;">
                                <i class="bi bi-gear-fill me-2"></i>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Categorie)
                        {
                            <tr>
                                <td class="text-center">
                                    <div class="category-icon">
                                        <i class="bi bi-folder-fill"></i>
                                    </div>
                                </td>
                                <td>
                                    <div class="category-name">
                                        <strong>@item.Nom</strong>
                                    </div>
                                </td>
                               
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-page="./Details" asp-route-id="@item.CategorieId"
                                           class="btn btn-sm btn-info" title="Détails">
                                            <i class="bi bi-eye"></i> Voir
                                        </a>
                                        <a asp-page="./Edit" asp-route-id="@item.CategorieId"
                                           class="btn btn-sm btn-warning" title="Modifier">
                                            <i class="bi bi-pencil"></i> Modifier
                                        </a>
                                        <a asp-page="./Delete" asp-route-id="@item.CategorieId"
                                           class="btn btn-sm btn-danger" title="Supprimer">
                                            <i class="bi bi-trash"></i> Supprimer
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (!Model.Categorie.Any())
    {
        <div class="alert alert-info mt-4 text-center empty-state">
            <i class="bi bi-inbox fs-1 d-block mb-3"></i>
            <h4>Aucune catégorie disponible</h4>
            <p class="mb-3">Les catégories vous permettent d'organiser vos produits efficacement</p>
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Créer votre première catégorie
            </a>
        </div>
    }

    <!-- Liste en grille (vue alternative) -->
    <div class="mt-4">
        <h4 class="mb-3">Vue en grille</h4>
        <div class="row g-3">
            @foreach (var item in Model.Categorie)
            {
                <div class="col-md-4 col-lg-3">
                    <div class="category-card">
                        <div class="category-card-icon">
                            <i class="bi bi-folder-fill"></i>
                        </div>
                        <div class="category-card-body">
                            <h5 class="category-card-title">@item.Nom</h5>
                            <p class="category-card-count">
                                @(item.Produits?.Count ?? 0) produit@(item.Produits?.Count > 1 ? "s" : "")
                            </p>
                        </div>
                        <div class="category-card-actions">
                            <a asp-page="./Edit" asp-route-id="@item.CategorieId"
                               class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-page="./Details" asp-route-id="@item.CategorieId"
                               class="btn btn-sm btn-outline-info">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-page="./Delete" asp-route-id="@item.CategorieId"
                               class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
